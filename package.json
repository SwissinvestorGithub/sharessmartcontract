{
  "name": "hardhat-project",
  "scripts": {
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "test": "npx hardhat test",
    "run:local": "npx hardhat node",
    "deploy:local": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:ropsten": "npx hardhat run scripts/deploy.ts --network ropsten",
    "verify:ropsten": "npx hardhat verify --network ropsten 0x2b55B6C20e574Bc91A844c29E29c58813b3eEF66 '10000000'",
    "typecheck": "npm compile && npm test && npm tsc --noEmit"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.10",
    "@nomiclabs/hardhat-etherscan": "^2.1.4",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.2.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.1.2",
    "@types/chai": "^4.2.20",
    "@types/mocha": "^8.2.2",
    "@types/node": "^16.0.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.1",
    "hardhat": "^2.4.1",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^5.1.1",
    "typescript": "^4.3.5"
  }
}
